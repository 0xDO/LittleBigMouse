<UserControl x:Class="LittleBigMouse_Control.VcpPlugin.VcpSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LittleBigMouse_Control.VcpPlugin"
             mc:Ignorable="d" 
             d:DesignHeight="300" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Slider HorizontalAlignment="Center" Grid.Row="0" Orientation="Vertical" x:Name="Slider" ValueChanged="Slider_OnValueChanged" SmallChange="1" LargeChange="10" Maximum="100">
            <Slider.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="{Binding Color}" Offset="0"/>
                </LinearGradientBrush>
            </Slider.Background>
            </Slider>
        <TextBox Grid.Row="1" x:Name="TextBox"/>
    </Grid>
</UserControl>
