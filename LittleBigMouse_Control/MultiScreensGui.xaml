<local:ScreensPresenter x:Class="LittleBigMouse_Control.MultiScreensGui"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformaD:\docs\_docs_\_projets\LittleBigMouse\LittleBigMouse_Control\MainGui.xamlts.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:LittleBigMouse_Control" MouseDown="ScreensPresenter_MouseDown"
                        
                        >
    <Grid x:Name="MainGrid">
        <!--SizeChanged="MainGrid_OnSizeChanged"-->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="2,2">
                <GradientStop Offset="0" Color="#FF293348"/>
                <GradientStop Offset="1.5" Color="Transparent"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Foreground="#20F0F0FF" FontSize="50">
            <Label.Effect>
                <BlurEffect Radius="10"></BlurEffect>
            </Label.Effect>

            Little Big Mouse
        </Label>

        <Canvas x:Name="ScreensGrid" />
    </Grid>
</local:ScreensPresenter>
