<Window x:Class="LittleBigMouse.Sizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LittleBigMouse"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        MouseMove="Window_MouseMove"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False" Closing="Window_Closing"
        AllowsTransparency="True"
        >
    <Border x:Name="border" Opacity="0.5" BorderThickness="0,1" BorderBrush="Red">
        <Border.Background>
            <LinearGradientBrush x:Name="gradient" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Color="#FF4080FF" Offset="0"/>
                <GradientStop Color="#00808080" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</Window>
